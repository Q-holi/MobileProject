<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <!-- ScoreBoard -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/TrunBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100dp"
                android:height="35dp"
                android:gravity="center"
                android:text="0/12"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/P1Turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Turn"
                android:width="80dp"
                android:height="35dp"
                android:gravity="center"
                android:text="P1"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/P2Turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/P1Turn"
                android:width="80dp"
                android:height="35dp"
                android:gravity="center"
                android:text="P2"
                android:textColor="#000000"
                android:textSize="20dp" />
        </RelativeLayout>
        <!-- Aces-->
        <RelativeLayout
            android:id="@+id/AcesBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Aces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100dp"
                android:height="45dp"
                android:gravity="center"
                android:text="Aces"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/P1AcesBtn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Aces"
                android:onClick="onButtonClick" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/P2AcesBtn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:onClick="onButtonClick"
                android:layout_toRightOf="@+id/P1AcesBtn" />
        </RelativeLayout>
        <!-- Deuces-->
