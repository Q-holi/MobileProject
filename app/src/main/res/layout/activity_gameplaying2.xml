                android:textSize="20dp" />

            <TextView
                android:id="@+id/P2BounsCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/P1BounsCheck"
                android:width="80dp"
                android:height="35dp"
                android:gravity="center"
                android:text="X"
                android:textSize="20dp" />
        </RelativeLayout>
        <!-- Choice-->
        <RelativeLayout
            android:id="@+id/ChoiceBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
