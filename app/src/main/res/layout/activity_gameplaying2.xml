    <!-- Dice IMG && Roll DIce-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/DiceImageView1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:onClick="onButtonClick"
            android:outlineSpotShadowColor="#FFFFFF"
            app:srcCompat="@drawable/dice_num1" />
        <ImageView
            android:id="@+id/DiceImageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/dice_num1"
            android:onClick="onButtonClick"/>
        <ImageView
            android:id="@+id/DiceImageView3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/dice_num1"
            android:onClick="onButtonClick"/>
        <ImageView
            android:id="@+id/DiceImageView4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/dice_num1"
            android:onClick="onButtonClick"/>
        <ImageView
            android:id="@+id/DiceImageView5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/dice_num1"
            android:onClick="onButtonClick"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/DiceRolling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClick"
            android:background="@drawable/rolldicebutton"
            android:text="주사위 굴리기"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/DiceRollingcount_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="주사위 굴린횟수"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/DiceRollingcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0/2"
            android:textSize="20dp" />

    </LinearLayout>
